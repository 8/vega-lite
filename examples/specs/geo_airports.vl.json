{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "layer": [{
      "data": {
        "url": "data/demo-airports.csv"
      },
      "mark": "geoshape",
      "projection": {
        "type": "albersUsa"
      },
      "encoding": {
        "color": {
          "value": "#000"
        }
      }
    },
    {
      "data": {
        "url": "data/demo-airports.csv"
      },
      "mark": "point",
      "projection": {
        "type": "albersUsa"
      },
      "encoding": {
        "x": {
          "field": "longitude",
          "type": "longitude"
        },
        "y": {
          "field": "latitude",
          "type": "latitude"
        },
        "size": {
          "field": "total",
          "type": "quantitative"
        }
      }
    }
  ],
  "config": {
    "projection": {
      "scale": 1000,
      "translate": [400, 250],
      "center": [0, 0]
    }
  }
}
